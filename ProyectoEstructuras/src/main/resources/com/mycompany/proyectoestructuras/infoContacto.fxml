<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="546.0" prefWidth="367.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyectoestructuras.controller.InfoContactoController">
    <!-- Contenedor principal -->
    <VBox alignment="CENTER" layoutX="76.0" layoutY="39.0" spacing="20" AnchorPane.leftAnchor="76.0" AnchorPane.topAnchor="39.0">
        <!-- Título -->
        <Label fx:id="contactTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Información del Contacto" />
        
        <!-- Foto del contacto -->
        <Circle fx:id="contactPhoto" fill="black" radius="60" stroke="white" strokeWidth="2" />
        
        <!-- Detalles del contacto -->
        <VBox fx:id="infoContenedor" alignment="CENTER" spacing="10">
            <Label fx:id="contactName" text="Nombre: " />
            <Label fx:id="contactLastName" text="Apellido: " />
            <Label fx:id="contactPhone" text="Teléfono: " />
            <Label fx:id="contactAddress" text="Dirección: " />
            <Label fx:id="contactEmail" text="Correo: " />
            <Label fx:id="contactCountry" text="País: " />
            <Label fx:id="contactType" text="Tipo: " />
        </VBox>
        
        <!-- Botones -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="editButton" style="-fx-background-color: green; -fx-text-fill: white;" text="Editar" />
            <Button fx:id="deleteButton" style="-fx-background-color: red; -fx-text-fill: white;" text="Eliminar" />
            <Button fx:id="closeButton" style="-fx-background-color: gray; -fx-text-fill: white;" text="Cerrar" />
        </HBox>

        <!-- Navegación -->
        <HBox alignment="CENTER" spacing="50.0">
            <Button fx:id="previousButton" style="-fx-background-color: #3a1bff; -fx-background-radius: 10; -fx-border-radius: 10;" text="Anterior" textFill="WHITE" />
            <Button fx:id="nextButton" style="-fx-background-color: #3a1bff; -fx-background-radius: 10; -fx-border-radius: 10;" text="Siguiente" textFill="WHITE" />
        </HBox>
    </VBox>
</AnchorPane>
