<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="400" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyectoestructuras.controller.InfoContactoController">
    <!-- Título de la ventana -->
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Información del Contacto" />
    
    <!-- Sección de la foto -->
    <StackPane>
      <children>
         <Circle fx:id="contactPhoto" fill="DODGERBLUE" radius="100.0" stroke="BLACK" strokeType="INSIDE" />
      </children>
    </StackPane>

    <!-- Información general del contacto -->
    <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 10; -fx-border-color: #d0d0d0; -fx-border-width: 1;">
        <!-- Nombre -->
        <HBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Nombre:" />
            <Label fx:id="contactName" />
        </HBox>

        <!-- Número de teléfono -->
        <HBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Teléfono:" />
            <Label fx:id="contactPhone" />
        </HBox>

        <!-- Dirección -->
        <HBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Dirección:" />
            <Label fx:id="contactAddress" />
        </HBox>

        <!-- Correo electrónico -->
        <HBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Correo:" />
            <Label fx:id="contactEmail" />
        </HBox>

        <!-- País -->
        <HBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="País:" />
            <Label fx:id="contactCountry" />
        </HBox>

        <!-- Tipo de contacto -->
        <HBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Tipo:" />
            <Label fx:id="contactType" />
        </HBox>
    </VBox>

    <!-- Botones de acción -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
        <Button fx:id="editButton" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Editar" />
        <Button fx:id="deleteButton" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Eliminar" />
        <Button fx:id="closeButton" style="-fx-background-color: #607d8b; -fx-text-fill: white;" text="Cerrar" />
    </HBox>
</VBox>
